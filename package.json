{
    "name": "simplesnackbarjs",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "build": "npm-run-all css js",
        "css": "npm-run-all css-lint css-compile css-minify",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true src/simpleSnackbar.sass dist/simpleSnackbar.css",
        "css-lint": "stylelint 'src/simpleSnackbar.sass'",
        "css-minify": "cleancss -o dist/simpleSnackbar.min.css dist/simpleSnackbar.css",
        "lint": "npm-run-all *-lint",
        "js": "npm-run-all js-lint js-compile js-minify",
        "js-compile": "rollup --config rollup.config.js --sourcemap",
        "js-lint": "eslint src/simpleSnackbar.js",
        "js-minify": "terser --compress --comments all --output dist/simpleSnackbar.min.js dist/simpleSnackbar.js",
        "watch": "npm-run-all --parallel watch-*",
        "watch-css": "nodemon --watch src/ --ext sass --exec 'npm run css'",
        "watch-js": "nodemon --watch src/ --ext js --exec 'npm run js'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomhrtly/simpleSnackbar.js.git"
    },
    "author": "Tom Hartley",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tomhrtly/simpleSnackbar.js/issues"
    },
    "homepage": "https://github.com/tomhrtly/simpleSnackbar.js#readme",
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/preset-env": "^7.4.3",
        "clean-css-cli": "^4.2.1",
        "eslint": "^6.3.0",
        "eslint-config-airbnb-base": "^14.0.0",
        "eslint-plugin-import": "^2.18.2",
        "node-sass": "^4.12.0",
        "nodemon": "^1.18.11",
        "npm-run-all": "^4.1.5",
        "rollup": "^1.4.0",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-terser": "^4.0.4",
        "sass-loader": "^7.3.1",
        "stylelint": "^10.0.1",
        "stylelint-config-recommended": "^2.2.0",
    }
}
